alias vim="nvim"
alias nvp="nordvpn connect"
alias nvpus="nordvpn connect united_states"
alias nvpd="nordvpn disconnect"

# cheatsheets
cs() {
    cat ~/.dotfiles/cheatsheets/$1
}

csls() {
    ls ~/.dotfiles/cheatsheets
}

# vpn
vpnfz() {
    sudo openvpn ~/works/ffg/post-creds/ovpn/$1.ovpn
}

r() {
    ~/bin/$@
}

a() {
    alacritty -e $@
}

nvps() {
   nvpstatus=$(nordvpn status) 
   notify-send "NordVPN:$nvpstatus"
}
